{
  "name": "guessmaster-arena",
  "version": "1.0.0",
  "description": "Real-time multiplayer number guessing game",
  "scripts": {
    "install-all": "npm install && cd backend && npm install && cd ../frontend && npm install",
    "cleanup": "lsof -ti:3000,5001 | xargs -r kill -9 || true",
    "dev": "npm run cleanup && concurrently \"npm run server\" \"npm run client\"",
    "server": "cd backend && npm start",
    "client": "cd frontend && npm start",
    "build": "cd frontend && npm run build"
  },
  "keywords": ["game", "multiplayer", "react", "nodejs", "socket.io"],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^7.6.0"
  }
}